// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema



datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}


// -------------------------------------------------------------------

// One to One with process
model Area {
  id       Int    @id @default(autoincrement())
  name    String @unique
  process Process?
}
// One to one with process
model Group {
  id       Int    @id @default(autoincrement())
  name    String @unique
  process Process?
}

model Process {
  id       Int    @id @default(autoincrement())
  name    String @unique
  group Group @relation(fields: [groupId], references: [id])
  groupId Int @unique

  Area Area @relation(fields: [areaId], references: [id])
  areaId Int @unique

  entries EntriesOnProcess[]
  outputs OutputsOnProcess[] 
}

// -------------------------------------------------------------------

model Entry {
  id       Int    @id @default(autoincrement())
  name    String @unique
  description    String

  processes EntriesOnProcess[]
}

// Many to Many relation table (process_entries)
model EntriesOnProcess {
  process Process @relation(fields: [processId], references: [id])
  processId Int
  entry Entry @relation(fields: [entryId], references: [id])
  entryId Int

  @@id([processId, entryId])
}

// -------------------------------------------------------------------

// Many to Many Relation Table (process_outputs)
model OutputsOnProcess {
  process Process @relation(fields: [processId], references: [id])
  processId Int
  output Output @relation(fields: [outputId], references: [id])
  outputId Int

  @@id([processId, outputId])
}

model Output {
  id       Int    @id @default(autoincrement())
  name    String @unique
  description    String

  processes OutputsOnProcess[]
}

// -------------------------------------------------------------------
